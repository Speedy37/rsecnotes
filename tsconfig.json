{
	"compilerOptions": {
		"target": "esnext", // Modern JS target
		"module": "amd", // or "esnext" depending on your setup
		"outFile": "./public/index.js", // compiled JS output directory
		"rootDir": ".", // source TS files location
		"strict": true, // enable all strict type-checking options
		"esModuleInterop": true, // for default import compatibility
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"allowJs": true
	},
	"files": [
		"./client/00_types.d.ts",
		"./client/01_qrcode.js",
		"./client/02_lib.ts",
		"./client/03_i18n.tsx",
		"./client/04_pkg.ts",
		"./client/05_api.ts",
		"./client/index.tsx"
	],
	"exclude": ["node_modules"]
}
